{
  "name": "runcoach-ai-monorepo",
  "version": "2.0.0",
  "description": "RunCoach AI - Monorepo avec API Node.js et Frontend React",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "./reset-and-start.sh",
    "dev": "npm run dev:web",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:python": "cd packages/api && source venv/bin/activate && uvicorn main:app --reload",
    "dev:fullstack": "./reset-and-start.sh",
    "reset": "./reset-and-start.sh",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=packages/web",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "setup:python": "cd packages/api && python3 -m venv venv && source venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["runcoach", "ai", "fitness", "running", "monorepo"],
  "author": "Christophe",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}